@model IEnumerable<WEB.Models.OrderModel>

@{
    ViewBag.Title = "All";
    Layout = "~/Views/Shared/_Main.cshtml";
}
<div class="container" style="margin-bottom: 15px;margin-top:15px">
    <div class="row justify-content-md-center">
        <div class="border border-dark rounded col-lg-7">
            <table class="table table-hover">
                <thead class="thead-light ">
                    <tr>
                        <th class="columnWidth-26per" scope="col">Id</th>
                        <th class="columnWidth-26per" scope="col">Status</th>
                        <th class="columnWidth-26per" scope="col">Count</th>
                        <th class="columnWidth-26per" scope="col">Payment</th>
                        <th class="columnWidth-26per" scope="col">Product</th>
                        <th style="width: 60px" scope="col"></th>
                        <th style="width: 60px" scope="col"></th>
                    </tr>
                </thead>
                <tbody id="results">
                    @foreach (var order in Model)
                    {
                    <tr class="changes">
                        <td>@order.Id</td>
                        <td>@order.Status</td>
                        <td>@order.Count</td>
                        <td>@order.Payment</td>
                        <td>
                            @order.Product.Name
                        </td>
                        <td>
                            <input type="button" value="Edit" class="btn btn-outline-primary btn-block btn-sm stretch" onclick="location.href = '@Url.Action("Edit", "Order", new {id = order.Id})'" />
                        </td>
                        <td>
                            <input type="button" value="Delete" class="btn btn-outline-danger btn-block btn-sm stretch" onclick="location.href = '@Url.Action("Delete", "Order", new {id = order.Id})'" />
                        </td>
                    </tr>
                    }
                    </tbody>
            </table>
        </div>
        <div class="col-lg-2" style="margin-left: 15px">
            <div class="border border-dark rounded">
                <a class="btn btn-dark btn-block" data-toggle="collapse" href="#collapseFilter" role="button" aria-expanded="false" aria-controls="collapseFilter">
                    Menu
                </a>
                <div class="collapse" id="collapseFilter">
                    <div style="margin: 10px">
                        <select class="custom-select mr-sm-2" id="sortOrder" onchange="OnSelectionChange(this)">
                            <option selected value="Id">Id</option>
                            <option value="Name">Name</option>
                            <option value="LastName">LastName</option>
                            <option value="MiddleName">MiddleName</option>
                        </select>
                    </div>
                    <div class="marginItem" style="margin: 10px;">
                        <div style="margin-top: 10px">
                            <input type="button" class="btn btn-outline-success btn-block" value="Create" onclick="location.href = '@Url.Action("Create", "User")'" />
                        </div>
                        <div style="margin-top: 10px">
                            <input type="button" class="btn btn-outline-secondary btn-block" value="Cancel" onclick="location.href = '@Url.Action("Index", "Home")'" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>