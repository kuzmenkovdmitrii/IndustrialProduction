@model WEB.Models.LoginModel

@{
    Layout = "~/Views/Shared/_Main.cshtml";
}

<div class="container">
    <div class="row justify-content-md-center">
        <div class="col-md-4 border border-dark rounded" style="margin: 15px; background-color: #f5f5f5;">
            <h4 class="text-center">Log-in</h4>
            @using (Html.BeginForm("Login", "Account", new {@class="text-center"}))
            {
                @Html.AntiForgeryToken()
                <div class="md-form">
                    @Html.TextBoxFor(x => x.UserName, new
                    {
                        @class = "form-control",
                        @placeholder = @Html.DisplayNameFor(x => x.UserName)
                    })
                    <span>@Html.ValidationMessageFor(x => x.UserName)</span>
                </div>
                <div class="form-group">
                    @Html.TextBoxFor(x => x.Password, new
                    {
                        @class = "form-control",
                        @placeholder = @Html.DisplayNameFor(x => x.Password)

                    })
                    <span>@Html.ValidationMessageFor(x => x.Password)</span>
                </div>
                <div class="text-center" style="margin: 15px">
                    <input type="submit" class="btn btn-outline-success" value="Login" />
                    <span>
                        <input type="button" class="btn btn-outline-danger" Value="Cancel" onclick="location.href = '@Url.Action("Index", "Home")'" />
                    </span>
                </div>
            }
        </div>
    </div>
</div>